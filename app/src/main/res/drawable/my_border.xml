<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    android:shape="rectangle" >

    <!-- View background color -->
    <solid
        android:color="@color/colorSoDark" >
    </solid>

    <!-- View border color and width -->
    <stroke
        android:width="1dp"
        android:color="@color/colorDarker" >
    </stroke>

    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp" />


    <!-- The radius makes the corners rounded -->
    <corners
        android:radius="2dp"   >
    </corners>
</shape>